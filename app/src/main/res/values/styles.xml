<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="DialogFragmentFullScreen" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="android:paddingRight">0dp</item>
        <item name="android:paddingLeft">0dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="ListItemText.Large" parent="@android:style/TextAppearance.Large">
    </style>
    <style name="ListItemText.Medium" parent="@android:style/TextAppearance.Medium">
    </style>
    <style name="ListItemText.Small" parent="@android:style/TextAppearance.Small">
    </style>

    <style name="BusArrival.InMins" parent="ListItemText.Large">
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/text_dark_grey</item>
    </style>
    <style name="BusArrival.Arriving" parent="ListItemText.Large">
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@android:color/black</item>
    </style>
    <style name="BusArrival.NotAvailable" parent="ListItemText.Large">
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/text_light_grey</item>
    </style>
</resources>
