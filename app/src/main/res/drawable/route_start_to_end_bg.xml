<?xml version="1.0" encoding="utf-8"?>
<!-- Gradient background from start color to end color for bus route -->
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <gradient android:startColor="@color/route_start"
                      android:endColor="@color/route_end"
                      android:type="linear" />
            <corners android:radius="4dp" />
        </shape>
    </item>
    <item android:top="4dp" android:left="4dp" android:right="4dp" android:bottom="4dp">
        <shape android:shape="rectangle">
            <corners android:radius="2dp" />
            <solid android:color="@android:color/white" />
        </shape>
    </item>
</layer-list>
